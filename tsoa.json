{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "securityDefinitions": {
      "oauth2": {
        "type": "oauth2",
        "scopes": {
          "read": "read",
          "write": "write"
        },
        "flows": {
          "clientCredentials": {
            "scopes": []
          }
        }
      }
    }
  },
  "routes": {
    "esm": true,
    "routesDir": "src",
    "authenticationModule": "./src/authentication.ts",
    "iocModule": "src/ioc"
  }
}
