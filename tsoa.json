{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "securityDefinitions": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "clientCredentials": {
            "scopes": {
              "admin": "Full access to all routes",
              "demandA:read": "Read demandB",
              "demandA:create": "Create demandA",
              "demandA:comment": "Comment on demandA",
              "demandB:read": "Read demandA",
              "demandB:create": "Create demandB",
              "demandB:comment": "Comment on demandB",
              "match2:propose": "Propose match2",
              "match2:cancel": "Cancel match2",
              "match2:accept.reject": "Accept or reject match2"
            }
          }
        }
      }
    }
  },
  "routes": {
    "esm": true,
    "routesDir": "src",
    "authenticationModule": "./src/authentication.ts",
    "iocModule": "src/ioc"
  }
}
